# Knowledge Fabric Environment Configuration
# Copy this file to .env and update the values as needed

# =============================================================================
# API Configuration
# =============================================================================
API_V1_STR=/api/v1
PROJECT_NAME=Knowledge Fabric

# =============================================================================
# Server Configuration
# =============================================================================
HOST=0.0.0.0
PORT=8000

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL=

# =============================================================================
# Vector Database Configuration
# =============================================================================
CHROMA_PERSIST_DIRECTORY=./chroma_db

# =============================================================================
# Model Configuration
# =============================================================================
MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# =============================================================================
# File Upload Configuration
# =============================================================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=52428800
ALLOWED_EXTENSIONS=.pdf,.txt,.docx

# =============================================================================
# Security Configuration
# =============================================================================
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# Training Configuration
# =============================================================================
BATCH_SIZE=32
LEARNING_RATE=2e-5
NUM_EPOCHS=3

# =============================================================================
# API Keys Configuration
# =============================================================================
# OpenAI API Key (Required for OpenAI GPT-4 integration)
OPENAI_API_KEY=your-openai-api-key-here

# Google Gemini API Key (Optional - for future Gemini integration)
GEMINI_API_KEY=your-gemini-api-key-here

# Anthropic Claude API Key (Optional - for future Claude integration)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# =============================================================================
# LLM Provider Configuration
# =============================================================================
# Default LLM provider (openai, gemini, anthropic)
DEFAULT_LLM_PROVIDER=openai

# =============================================================================
# Development Configuration
# =============================================================================
# Set to true for development mode
DEBUG=false

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=INFO 